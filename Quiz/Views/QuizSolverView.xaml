<Window x:Class="Quiz.Views.QuizSolverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Quiz.Converters"
        Title="Rozwiązywanie Quizu" Height="400" Width="600"
        DataContext="{Binding QuizSolverViewModel}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lewy górny róg: pytanie -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding CurrentQuestion.Text}" FontSize="16" FontWeight="Bold" Grid.Column="0"/>
            <TextBlock Text="{Binding ElapsedTimeString}" FontSize="16" Grid.Column="1" />
        </Grid>
        <!-- Prawy górny róg: przycisk nawigacji + tytuł quizu -->
        <StackPanel Orientation="vertical" Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Wczytaj" Grid.Column="0" Command="{Binding LoadQuizCommand}" Margin="5" Width="70" HorizontalAlignment="Center"/>
                <Button Content="Menu" Grid.Column="1" Command="{Binding NavigateBackCommand}" Margin="5" Width="70" HorizontalAlignment="Center"/>
            </Grid>
            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Margin="10"/>
        </StackPanel>

        <!-- Lewy dolny róg: lista odpowiedzi -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding CurrentAnswers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Text}" 
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  IsEnabled="{Binding DataContext.IsQuizLocked, 
                                                      RelativeSource={RelativeSource AncestorType=Window}, 
                                                      Converter={StaticResource InverseBoolConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Następne" Command="{Binding NextQuestionCommand}" Margin="10" 
                    Visibility="{Binding IsQuizLoaded, Converter={StaticResource BoolToVisConverter}}"/>
        </StackPanel>

        <!-- Prawy dolny róg: lista pytań oraz przycisk zakończenia quizu -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding quiz.Questions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Text}" Margin="5">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding DataContext.SelectQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}" 
                                                  MouseAction="LeftClick"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button Content="Zakończ Quiz" Command="{Binding EndQuizCommand}" Grid.Row="1" Margin="10" 
                    Visibility="{Binding IsQuizLoaded, Converter={StaticResource BoolToVisConverter}}"/>
        </Grid>
    </Grid>
</Window>
