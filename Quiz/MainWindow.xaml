<Window x:Class="Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz"
        xmlns:vm="clr-namespace:Quiz.ViewModels"
        mc:Ignorable="d"
        Title="QuizApp" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Wybierz opcję:" FontSize="20" HorizontalAlignment="Center" />
            <Button Content="Tworzenie Quizu" Command="{Binding NavigateToQuizGeneratorCommand}" Width="200" Height="50" />
            <Button Content="Rozwiązywanie Quizu" Command="{Binding NavigateToQuizSolverCommand}" Width="200" Height="50" />
        </StackPanel>
    </Grid>
</Window>
